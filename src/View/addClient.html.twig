{% extends 'base.html.twig' %}

{% block title %}Accueil - Trouve ton stage{% endblock %}


{% block content %}
<link rel="stylesheet" href="/assets/css/form.css">

<div class="form-container">
  <h2>Ajouter un client</h2>

  <form action="/client/add" method="POST" id="addClientForm">
      <label for="last_name">Nom :</label>
      <input type="text" id="last_name" name="last_name" required>
      <div class="errorInput" id="lastNameError"></div>
    <br>

      <label for="first_name">Prénom :</label>
      <input type="text" id="first_name" name="first_name" required>
      <div class="errorInput" id="firstNameError"></div>
<br>
      <label for="phone">Numéro de téléphone :</label>
      <input type="phone" id="phone" name="phone" required>
      <div class="errorInput" id="phoneError"></div>
    <br>
    <input type="hidden" name="return" value="{{ return }}">
    <button type="submit" class="btn-add">Ajouter</button>
  </form>
</div>

    <script src="/assets/js/add_client.js"></script>


{% endblock %}
